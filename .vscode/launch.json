{
	"version": "0.2.0",
	"configurations": [
		{
			"args": [
				"task"
			],
			"name": "Gulp task",
			"program": "${workspaceFolder}/node_modules/gulp/bin/gulp.js",
			"request": "launch",
			"skipFiles": [
				"<node_internals>/**"
			],
			"type": "node"
		},
		{
			"type": "extensionHost",
			"request": "launch",
			"name": "Extension",
			"runtimeExecutable": "${execPath}",
			"args": [
				"--extensionDevelopmentPath=${workspaceFolder}",
				"--inspect",
				"${workspaceFolder}/test/resources/projects/advpl"
			],
			"outFiles": [
				"${workspaceFolder}/out/**/*.js"
			],
			"sourceMaps": true,
			"preLaunchTask": "npm: compile",
			"env": {
				"TOTVS_LS_LOG_FILE": "./TOTVS_LS_LOG_FILE.log"
			}
		},
		{
			"type": "extensionHost",
			"request": "launch",
			"name": "Extension WithoutCompile",
			"runtimeExecutable": "${execPath}",
			"args": [
				"--extensionDevelopmentPath=${workspaceFolder}",
				"${workspaceFolder}/test/resources/projects/advpl"
			],
			"outFiles": [
				"${workspaceFolder}/out/**/*.js"
			],
			"preLaunchTask": "",
			"env": {
				"TOTVS_LS_LOG_FILE": "./TOTVS_LS_LOG_FILE.log"
			}
		},
		{
			"name": "Extension Tests",
			"type": "extensionHost",
			"request": "launch",
			"runtimeExecutable": "${execPath}",
			"args": [
				"--extensionDevelopmentPath=${workspaceFolder}",
				"--extensionTestsPath=${workspaceFolder}/out/test/index.js",
				"${workspaceFolder}/test/resources/projects/advpl"
			],
			"skipFiles": [
				"<node_internals>/**"
			],
			"sourceMaps": true,
			"preLaunchTask": "npm: compile",
			"outFiles": [
				"${workspaceFolder}/out/test/**/*.test.js"
			]
		}
	]
}