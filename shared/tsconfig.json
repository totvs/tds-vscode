{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "outDir": "lib",
    "lib": [
      "es6",
      "dom"
    ],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,
    "rootDir": "src",
    "strict": true
  },
  "include": [
    "**/*"
  ],
  "exclude": [
    "node_modules/",
    "lib"
  ]
}